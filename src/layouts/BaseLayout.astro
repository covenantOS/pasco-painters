---
export interface Props {
  title: string;
  description: string;
  canonicalURL?: string;
  image?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
  modifiedTime?: string;
  author?: string;
  section?: string;
  tags?: string[];
}

const {
  title,
  description,
  canonicalURL = Astro.url,
  image = '/images/pasco-painters-og.jpg',
  type = 'website',
  publishedTime,
  modifiedTime,
  author = 'Pasco Painters',
  section,
  tags = []
} = Astro.props;

const siteName = 'Pasco Painters';
const fullTitle = title === siteName ? title : `${title} | ${siteName}`;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Primary Meta Tags -->
    <title>{fullTitle}</title>
    <meta name="title" content={fullTitle} />
    <meta name="description" content={description} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.url)} />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:locale" content="en_US" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={fullTitle} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.url)} />
    
    <!-- Additional Meta Tags -->
    <meta name="robots" content="index, follow" />
    <meta name="author" content={author} />
    <meta name="theme-color" content="#1e40af" />
    
    <!-- Article specific meta tags -->
    {publishedTime && <meta property="article:published_time" content={publishedTime} />}
    {modifiedTime && <meta property="article:modified_time" content={modifiedTime} />}
    {section && <meta property="article:section" content={section} />}
    {tags.length > 0 && tags.map(tag => <meta property="article:tag" content={tag} />)}
    
    <!-- Preload critical resources -->
    <link rel="preload" href="/fonts/inter-var.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/images/hero-bg.webp" as="image" />
    
    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": "Pasco Painters",
      "description": "Professional painting services in Pasco County, Florida. Residential and commercial painting, interior and exterior painting, cabinet refinishing, and pressure washing.",
      "url": "https://pascopainters.com",
      "telephone": "+1-727-555-0123",
      "email": "info@pascopainters.com",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "1234 Main Street",
        "addressLocality": "New Port Richey",
        "addressRegion": "FL",
        "postalCode": "34652",
        "addressCountry": "US"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": 28.2442,
        "longitude": -82.7195
      },
      "openingHours": "Mo-Fr 08:00-18:00,Sa 08:00-16:00",
      "priceRange": "$$",
      "serviceArea": {
        "@type": "GeoCircle",
        "geoMidpoint": {
          "@type": "GeoCoordinates",
          "latitude": 28.2442,
          "longitude": -82.7195
        },
        "geoRadius": "50000"
      },
      "sameAs": [
        "https://www.facebook.com/pascopainters",
        "https://www.instagram.com/pascopainters"
      ],
      "image": "https://pascopainters.com/images/pasco-painters-logo.jpg",
      "logo": "https://pascopainters.com/images/pasco-painters-logo.jpg"
    })} />
    
    <!-- Critical CSS -->
    <style is:inline>
      /* Critical CSS for above-the-fold content */
      :root {
        --primary: #1e40af;
        --primary-dark: #1e3a8a;
        --secondary: #f59e0b;
        --accent: #10b981;
        --text: #1f2937;
        --text-light: #6b7280;
        --background: #ffffff;
        --surface: #f9fafb;
        --border: #e5e7eb;
      }
      
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        line-height: 1.6;
        color: var(--text);
        background: var(--background);
      }
      
      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
      }
      
      .btn-primary {
        background: var(--primary);
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        text-decoration: none;
        font-weight: 600;
        transition: background-color 0.2s;
        display: inline-block;
      }
      
      .btn-primary:hover {
        background: var(--primary-dark);
      }
    </style>
  </head>
  <body>
    <slot />
    
    <!-- Non-critical CSS -->
    <link rel="stylesheet" href="/styles/global.css" />
  </body>
</html>
