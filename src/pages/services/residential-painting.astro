---
import MainLayout from '../../layouts/MainLayout.astro';

const title = "Residential Painting Services in Pasco County, FL | Pasco Painters";
const description = "Professional residential painting services in Pasco County, Florida. Interior and exterior house painting, color consultation, and quality finishes. Free estimates, licensed & insured.";
---

<MainLayout title={title} description={description}>
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="container">
      <div class="hero-content">
        <div class="hero-text">
          <h1>Residential Painting Services</h1>
          <p class="hero-subtitle">
            Transform your home with professional residential painting services throughout Pasco County, Florida. 
            From interior makeovers to exterior transformations, we deliver quality results that last.
          </p>
          <div class="hero-features">
            <div class="feature">
              <span class="feature-icon">‚úì</span>
              <span>Interior & Exterior Painting</span>
            </div>
            <div class="feature">
              <span class="feature-icon">‚úì</span>
              <span>Color Consultation</span>
            </div>
            <div class="feature">
              <span class="feature-icon">‚úì</span>
              <span>Quality Finishes</span>
            </div>
          </div>
          <div class="hero-cta">
            <a href="/contact" class="btn btn-primary btn-lg">Get Free Estimate</a>
            <a href="tel:+1-727-555-0123" class="btn btn-outline btn-lg">Call (727) 555-0123</a>
          </div>
        </div>
        <div class="hero-image">
          <div class="image-placeholder">
            <span>Residential Painting</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Overview -->
  <section class="section bg-surface">
    <div class="container">
      <div class="text-center mb-2xl">
        <h2>Comprehensive Residential Painting Solutions</h2>
        <p class="text-lg text-light">
          Professional painting services for every room and surface in your home
        </p>
      </div>
      
      <div class="grid grid-3">
        <div class="service-card">
          <div class="service-icon">üè†</div>
          <h3>Interior Painting</h3>
          <p>
            Transform your living spaces with professional interior painting services. 
            We handle walls, ceilings, trim, and more with precision and care.
          </p>
          <ul class="service-list">
            <li>Living Rooms & Bedrooms</li>
            <li>Kitchens & Bathrooms</li>
            <li>Hallways & Staircases</li>
            <li>Basements & Attics</li>
          </ul>
        </div>
        
        <div class="service-card">
          <div class="service-icon">üè°</div>
          <h3>Exterior Painting</h3>
          <p>
            Protect and beautify your home's exterior with professional painting services. 
            We use high-quality materials designed for Florida's climate.
          </p>
          <ul class="service-list">
            <li>House Siding</li>
            <li>Trim & Gutters</li>
            <li>Doors & Windows</li>
            <li>Fences & Decks</li>
          </ul>
        </div>
        
        <div class="service-card">
          <div class="service-icon">üé®</div>
          <h3>Color Consultation</h3>
          <p>
            Get expert guidance on color selection for your home. Our color consultants 
            help you choose the perfect palette for your style and space.
          </p>
          <ul class="service-list">
            <li>Color Analysis</li>
            <li>Sample Testing</li>
            <li>Style Recommendations</li>
            <li>Trend Insights</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="section">
    <div class="container">
      <div class="text-center mb-2xl">
        <h2>Our Residential Painting Process</h2>
        <p class="text-lg text-light">
          A systematic approach to delivering exceptional results
        </p>
      </div>
      
      <div class="process-grid">
        <div class="process-step">
          <div class="step-number">1</div>
          <h3>Free Consultation</h3>
          <p>
            We visit your home to assess the project scope, discuss your vision, 
            and provide a detailed, no-obligation estimate.
          </p>
        </div>
        
        <div class="process-step">
          <div class="step-number">2</div>
          <h3>Color Selection</h3>
          <p>
            Work with our color consultants to choose the perfect colors for your space, 
            considering lighting, style, and your preferences.
          </p>
        </div>
        
        <div class="process-step">
          <div class="step-number">3</div>
          <h3>Surface Preparation</h3>
          <p>
            Proper preparation is key to lasting results. We clean, repair, and prime 
            surfaces to ensure optimal paint adhesion.
          </p>
        </div>
        
        <div class="process-step">
          <div class="step-number">4</div>
          <h3>Professional Painting</h3>
          <p>
            Our skilled painters apply paint with precision using professional techniques 
            and high-quality materials for flawless results.
          </p>
        </div>
        
        <div class="process-step">
          <div class="step-number">5</div>
          <h3>Quality Inspection</h3>
          <p>
            We conduct thorough quality checks to ensure every detail meets our high standards 
            before considering the project complete.
          </p>
        </div>
        
        <div class="process-step">
          <div class="step-number">6</div>
          <h3>Final Walkthrough</h3>
          <p>
            We walk through the completed project with you to ensure you're completely 
            satisfied with the results.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="section bg-primary text-white">
    <div class="container">
      <div class="text-center mb-2xl">
        <h2>Why Choose Pasco Painters for Your Home</h2>
        <p class="text-lg">
          Experience the difference that professional expertise makes
        </p>
      </div>
      
      <div class="grid grid-3">
        <div class="benefit-card">
          <div class="benefit-icon">üë®‚Äçüé®</div>
          <h3>Expert Team</h3>
          <p>
            Our painters are highly skilled professionals with years of experience 
            in residential painting and attention to detail.
          </p>
        </div>
        
        <div class="benefit-card">
          <div class="benefit-icon">üõ°Ô∏è</div>
          <h3>Licensed & Insured</h3>
          <p>
            We're fully licensed and insured to protect your home and provide 
            peace of mind throughout the project.
          </p>
        </div>
        
        <div class="benefit-card">
          <div class="benefit-icon">üéØ</div>
          <h3>Quality Materials</h3>
          <p>
            We use only premium paints and materials from trusted brands to ensure 
            beautiful, long-lasting results.
          </p>
        </div>
        
        <div class="benefit-card">
          <div class="benefit-icon">‚è∞</div>
          <h3>On-Time Completion</h3>
          <p>
            We respect your time and complete projects on schedule, with minimal 
            disruption to your daily routine.
          </p>
        </div>
        
        <div class="benefit-card">
          <div class="benefit-icon">üí∞</div>
          <h3>Competitive Pricing</h3>
          <p>
            Get professional quality at competitive prices with transparent pricing 
            and no hidden fees.
          </p>
        </div>
        
        <div class="benefit-card">
          <div class="benefit-icon">‚úÖ</div>
          <h3>Satisfaction Guaranteed</h3>
          <p>
            We stand behind our work with a satisfaction guarantee and ongoing 
            support after project completion.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="section">
    <div class="container">
      <div class="text-center mb-2xl">
        <h2>Frequently Asked Questions</h2>
        <p class="text-lg text-light">
          Common questions about residential painting services
        </p>
      </div>
      
      <div class="faq-grid">
        <div class="faq-item">
          <h3>How long does a typical residential painting project take?</h3>
          <p>
            Project duration depends on the scope and size. A single room typically takes 1-2 days, 
            while a full house exterior can take 3-7 days. We'll provide a detailed timeline during your estimate.
          </p>
        </div>
        
        <div class="faq-item">
          <h3>Do you move furniture and protect my belongings?</h3>
          <p>
            Yes, we handle furniture moving and provide comprehensive protection for your belongings, 
            floors, and fixtures to ensure a clean, professional job.
          </p>
        </div>
        
        <div class="faq-item">
          <h3>What types of paint do you use?</h3>
          <p>
            We use premium paints from trusted brands like Sherwin-Williams, Benjamin Moore, 
            and Behr, selecting the best options for each surface and application.
          </p>
        </div>
        
        <div class="faq-item">
          <h3>Can you help with color selection?</h3>
          <p>
            Absolutely! Our color consultation service helps you choose the perfect colors 
            for your space, considering lighting, style, and your preferences.
          </p>
        </div>
        
        <div class="faq-item">
          <h3>Do you provide warranties on your work?</h3>
          <p>
            Yes, we offer warranties on our workmanship and use quality materials 
            that come with manufacturer warranties.
          </p>
        </div>
        
        <div class="faq-item">
          <h3>How do I prepare for the painting project?</h3>
          <p>
            We'll provide a detailed preparation checklist, but generally involves clearing 
            the work area and ensuring access to electrical outlets and water sources.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section bg-secondary text-white">
    <div class="container">
      <div class="text-center">
        <h2>Ready to Transform Your Home?</h2>
        <p class="text-lg mb-xl">
          Get your free estimate for residential painting services in Pasco County, Florida. 
          Let us help you create the home of your dreams.
        </p>
        <div class="cta-buttons">
          <a href="/contact" class="btn btn-primary btn-lg">Get Free Estimate</a>
          <a href="tel:+1-727-555-0123" class="btn btn-outline btn-lg">Call Now</a>
        </div>
      </div>
    </div>
  </section>
</MainLayout>

<style>
  /* Hero Section */
  .hero-section {
    background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
    color: white;
    padding: 4rem 0;
  }
  
  .hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
  }
  
  .hero-text h1 {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 1.5rem;
  }
  
  .hero-subtitle {
    font-size: 1.25rem;
    line-height: 1.6;
    margin-bottom: 2rem;
    opacity: 0.9;
  }
  
  .hero-features {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-bottom: 2rem;
  }
  
  .feature {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 500;
  }
  
  .feature-icon {
    color: var(--secondary);
    font-weight: bold;
  }
  
  .hero-cta {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }
  
  .hero-image {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .image-placeholder {
    width: 100%;
    height: 300px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: 600;
  }
  
  /* Service Cards */
  .service-card {
    background: white;
    padding: 2rem;
    border-radius: 1rem;
    text-align: center;
    box-shadow: var(--shadow-sm);
    transition: all 0.3s ease;
  }
  
  .service-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-lg);
  }
  
  .service-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
  
  .service-card h3 {
    color: var(--primary);
    margin-bottom: 1rem;
  }
  
  .service-card p {
    color: var(--text-light);
    margin-bottom: 1.5rem;
  }
  
  .service-list {
    list-style: none;
    padding: 0;
    text-align: left;
  }
  
  .service-list li {
    padding: 0.25rem 0;
    position: relative;
    padding-left: 1.5rem;
    color: var(--text);
  }
  
  .service-list li::before {
    content: "‚úì";
    position: absolute;
    left: 0;
    color: var(--accent);
    font-weight: bold;
  }
  
  /* Process Section */
  .process-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }
  
  .process-step {
    text-align: center;
    padding: 2rem;
  }
  
  .step-number {
    width: 60px;
    height: 60px;
    background: var(--primary);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: bold;
    margin: 0 auto 1rem;
  }
  
  .process-step h3 {
    color: var(--primary);
    margin-bottom: 1rem;
  }
  
  .process-step p {
    color: var(--text-light);
  }
  
  /* Benefits Section */
  .benefit-card {
    text-align: center;
    padding: 2rem;
  }
  
  .benefit-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
  
  .benefit-card h3 {
    margin-bottom: 1rem;
  }
  
  .benefit-card p {
    opacity: 0.9;
  }
  
  /* FAQ Section */
  .faq-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 2rem;
  }
  
  .faq-item {
    background: white;
    padding: 1.5rem;
    border-radius: 0.75rem;
    border: 1px solid var(--border);
  }
  
  .faq-item h3 {
    color: var(--primary);
    margin-bottom: 0.75rem;
    font-size: 1.1rem;
  }
  
  .faq-item p {
    color: var(--text-light);
    margin: 0;
  }
  
  /* CTA Section */
  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  /* Responsive Design */
  @media (max-width: 768px) {
    .hero-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .hero-text h1 {
      font-size: 2rem;
    }
    
    .hero-subtitle {
      font-size: 1.1rem;
    }
    
    .hero-cta {
      flex-direction: column;
    }
    
    .process-grid {
      grid-template-columns: 1fr;
    }
    
    .faq-grid {
      grid-template-columns: 1fr;
    }
    
    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }
  }
</style>
